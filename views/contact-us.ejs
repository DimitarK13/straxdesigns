<%- include('partials/header.ejs') %>
<div class="flex">
  <button id="back-btn" class="btn secondary-btn">
    <i class="fa-solid fa-angle-left"></i>
  </button>

  <form action="/" method="post" class="contact-us">
    <div>
      <label for="name" class="uppercase">Name</label
      ><input type="text" name="name" id="name" placeholder="John Doe" />
    </div>
    <div>
      <label for="email" class="uppercase">Email</label
      ><input
        type="email"
        name="email"
        id="email"
        placeholder="johndoe@gmail.com"
      />
    </div>
    <div>
      <label for="date" class="uppercase">Date</label>
      <input type="date" name="date" id="date" />
    </div>

    <button type="submit" class="btn primary-btn" id="form-submit-btn">
      Schedule
    </button>
  </form>

  <dialog class="form-message">
    <p class="sub-heading uppercase" id="server-message"></p>
    <p>You will be redirected to the Home Page in 3 seconds</p>
  </dialog>

  <section for="contact-info" class="contact-info">
    <header id="contact-info">
      <h2 class="uppercase font-weight-regular">Contact Information</h2>
    </header>
    <div class="contact-info-items">
      <div class="contact-info-item">
        <i class="fa-solid fa-phone"></i>
        <a href="tel: +389 77 961 279" class="uppercase"> 077-961-279</a>
      </div>
      <div class="contact-info-item">
        <i class="fa-solid fa-phone"></i>
        <a href="tel: +389 77 981 775" class="uppercase"> 077-981-775</a>
      </div>
      <div class="contact-info-item">
        <i class="fa-brands fa-instagram"></i>
        <a
          href="https://www.instagram.com/strax_designs/"
          class="uppercase"
          target="_blank"
        >
          @strax_design</a
        >
      </div>
      <div class="contact-info-item">
        <i class="fa-brands fa-facebook"></i>
        <a
          href="https://www.facebook.com/straxdesigns"
          class="uppercase"
          target="_blank"
        >
          /straxdesigns</a
        >
      </div>
      <div class="contact-info-item">
        <i class="fa-solid fa-envelope"></i>
        <a href="mailto: info@straxdesigns.com" class="uppercase"
          >info@straxdesigns.com</a
        >
      </div>
    </div>
  </section>
</div>

<script>
  const backBtn = document.getElementById("back-btn");

  backBtn.addEventListener("click", () => {
    history.back();
  });
</script>
